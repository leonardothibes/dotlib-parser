# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

[*.sql]
insert_final_newline = true

[*.cs]
insert_final_newline = true

[*.json]
indent_size = 4

[*.mk]
indent_style = tab

[Makefile]
indent_style = tab

[*.sass]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
